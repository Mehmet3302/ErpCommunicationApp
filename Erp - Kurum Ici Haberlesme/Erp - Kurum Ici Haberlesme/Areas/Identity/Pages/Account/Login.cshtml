@page
@model LoginModel


@{
    ViewData["Title"] = "- MESKİ HABERLEŞME GİRİŞ";
}
@{
    Layout = null;
}
<link rel="icon" href="~/image/indir.png" type="image/x-icon">
<link rel="shortcut icon" href="~/image/indir.png" type="image/x-icon">
<link href="~/css/login.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">
                                <div class="text-center">
                                    <img src="~/image/indir.png"
                                         style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">MESKİ HABERLEŞME</h4>
                                </div>

                                <form id="account" method="post">
                                    <h2>Sayfaya Erişmek İçin Lütfen Giriş Yapınız.</h2>
                                    <hr />
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating mb-4">
                                        <input type="text" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Kullanıcı Adınız" />
                                        <label asp-for="Input.Email" class="form-label"></label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mb-4">
                                        <input type="password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Şifreniz" />
                                        <label asp-for="Input.Password" class="form-label"></label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @ViewBag.ErrorMessage
                                        </div>
                                    }
                                    <div>
                                        <p>
                                            <a id="forgot-password" asp-page="./ForgotPassword">Şifrenizi mi Unuttunuz!</a>
                                        </p>
                                    </div>
                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">
                                            GİRİŞ
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">MESKİ HABERLEŞME</h4>
                                <p class="small mb-0">
                                    Birimlerimiz arasındaki mesajlaşmalar bizim için çok önemlidir.
                                    Daha güvenilir mesajlaşma için tasarlanan sitemiz,
                                    personellerimize sunulmuştur.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
                          